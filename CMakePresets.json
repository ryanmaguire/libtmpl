{
  "buildPresets": [
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "configurePreset": "ci-linux",
      "name": "ci-linux",
      "targets": [
        "install"
      ]
    },
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "configurePreset": "ci-linux-aarch64-crosscompile",
      "name": "ci-linux-aarch64-crosscompile",
      "targets": [
        "install"
      ]
    },
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Darwin",
        "type": "equals"
      },
      "configurePreset": "ci-macos",
      "name": "ci-macos",
      "targets": [
        "install"
      ]
    },
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Windows",
        "type": "equals"
      },
      "configurePreset": "ci-windows",
      "name": "ci-windows",
      "targets": [
        "install"
      ]
    }
  ],
  "configurePresets": [
    {
      "name": "ci-base",
      "hidden": true,
      "binaryDir": "${sourceParentDir}/build/libtmpl",
      "installDir": "${sourceParentDir}/install/libtmpl",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LIBTMPL_BUILD_EXAMPLES": true,
        "LIBTMPL_BUILD_TESTS": true,
        "LIBTMPL_ENABLE_VERBOSE": true,
        "LIBTMPL_STDVER": "-std=c11"
      }
    },
    {
      "name": "ci-linux",
      "inherits": "ci-base",
      "generator": "Ninja",
      "cacheVariables": {
        "LIBTMPL_USE_ASM": true,
        "LIBTMPL_USE_FASM": true,
        "LIBTMPL_USE_MATH": true,
        "LIBTMPL_USE_OMP": true
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      }
    },
    {
      "name": "ci-linux-aarch64-crosscompile",
      "inherits": "ci-base",
      "description": "Cross-compile from x86-64 to aarch64. Requires qemu, gcc-aarch64-linux-gnu, and g++-aarch64-linux-gnu",
      "displayName": "Cross-compile from x86-64 to aarch64 on Linux.",
      "generator": "Ninja",
      "cacheVariables": {
        "LIBTMPL_USE_ASM": true,
        "LIBTMPL_USE_FASM": true,
        "LIBTMPL_USE_MATH": true,
        "LIBTMPL_USE_OMP": true,
        "CONAN_PROFILE_FILE": {
          "type": "PATH",
          "value": "${sourceDir}/conan/aarch64-linux-gnu-gcc.conan.profile"
        }
      },
      "environment": {
        "CONAN_CMAKE_FIND_ROOT_PATH": "/usr/aarch64-linux-gnu;/usr/include/aarch64-linux-gnu/;/usr/lib/aarch64-linux-gnu/;/lib/aarch64-linux-gnu",
        "CONAN_CMAKE_FIND_ROOT_PATH_MODE_INCLUDE": "ONLY",
        "CONAN_CMAKE_FIND_ROOT_PATH_MODE_LIBRARY": "BOTH",
        "CONAN_CMAKE_FIND_ROOT_PATH_MODE_PROGRAM": "NEVER",
        "CONAN_CMAKE_SYSTEM_NAME": "Linux",
        "CONAN_CMAKE_SYSTEM_PROCESSOR": "aarch64",
        "CONAN_CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/aarch64-linux-gnu-gcc.cmake"
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "toolchainFile": "cmake/toolchains/aarch64-linux-gnu-gcc.cmake"
    },
    {
      "name": "ci-macos",
      "inherits": "ci-base",
      "generator": "Xcode",
      "cacheVariables": {
        "LIBTMPL_USE_ASM": true,
        "LIBTMPL_USE_FASM": false,
        "LIBTMPL_USE_MATH": true,
        "LIBTMPL_USE_OMP": true
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Darwin",
        "type": "equals"
      },
      "toolchainFile": "cmake/toolchains/gcc-macos.cmake"
    },
    {
      "name": "ci-windows",
      "inherits": "ci-base",
      "architecture": {
        "strategy": "set",
        "value": "x64"
      },
      "cacheVariables": {
        "LIBTMPL_USE_ASM": true,
        "LIBTMPL_USE_FASM": false,
        "LIBTMPL_USE_MATH": true,
        "LIBTMPL_USE_OMP": false
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Windows",
        "type": "equals"
      }
    }
  ],
  "version": 5
}
